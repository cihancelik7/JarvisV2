<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@drawable/bg_toolbar"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_back" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/robot_image_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/back_img"
        app:strokeColor="@color/mainBackgroundColor"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/robot_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/aicolor" />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/robot_image_ll"
        android:fontFamily="@font/ubuntu_mono_regular"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Jarvis V2" />

</RelativeLayout>